---
import { Image } from 'astro:assets';
import vispyrFlame from '../assets/vispyr-flame.png';
import vispyrText from '../assets/vispyr-text.png';
import NavBar from './NavBar.astro';
import ThemeSelect from './ThemeSelect.astro';
import MobileMenuToggle from './MobileMenuToggle.astro';
import Drawer from './Drawer.astro';
---
<header class="landing-header">
  <MobileMenuToggle />
  <!-- <Drawer /> -->
  <div class="header-content">
    <div class="logo">
      <a href="/">
        <Image id="logo-flame" src={vispyrFlame} alt="Vispyr Banner" />
        <Image id="logo-text" src={vispyrText} alt="Vispyr Text" />
      </a>
    </div>
    
    <div class="header-right">
      <NavBar />
      <ThemeSelect />
    </div>
  </div>
</header>

<style>
  .landing-header {
    height: 4rem;
    padding: 0 1.5rem;
    background-color: var(--sl-color-bg-nav);
    border-bottom: 1px solid var(--sl-color-gray-5);
    font-family: 'Nunito Sans', sans-serif;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    line-height: 0 !important;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    gap: 1.5rem;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links a {
    display: flex;
    align-items: center;
    color: var(--sl-color-text);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--sl-color-accent-high);
  }

  #github-logo {
    height: 1.75rem;
    width: 1.75rem;
    transition: opacity 0.2s ease;
  }

  .nav-links a:hover #github-logo {
    filter: brightness(0) saturate(100%) invert(27%) sepia(51%) saturate(2878%) hue-rotate(346deg) brightness(104%) contrast(97%);
  }

  .logo a {
    display: flex;
    align-items: center;
  }

  .logo img {
    width: auto;
  }

  #logo-flame {
    height: 3rem;
  }

  #logo-text {
    height: 1.5rem;
    filter: brightness(1) invert(0);
  }

  #logo-text:hover {
    filter: var(--image-filter);
  }

  #theme-toggle {
    background: transparent;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--sl-color-text);
    transition: all 0.2s ease;
    min-width: 50px;
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
  }

  #theme-toggle:hover {
    color: rgb(255, 71, 58);
  }

  #theme-toggle:focus-visible {
    outline: 2px solid var(--sl-color-accent);
    outline-offset: 2px;
  }

  .sun-icon,
  .moon-icon {
    display: none;
    transition: opacity 0.2s ease;
  }

  :root .sun-icon {
    display: block;
  }

  [data-theme="dark"] .sun-icon {
    display: none;
  }

  [data-theme="dark"] .moon-icon {
    display: block;
  }

  [data-theme="light"] .sun-icon {
    display: block;
  }

  [data-theme="light"] .moon-icon {
    display: none;
  }

  @media (max-width: 768px) {
    .landing-header {
      height: 5rem;
    }

    .nav-links a {
      font-size: 0.8rem;
    }

    .logo img {
      height: 3rem;
    }

    #github-logo {
      height: 1.5rem;
      width: 1.5rem;
    }

    #theme-toggle {
      display: none;
    }

    .sun-icon,
    .moon-icon {
      width: 24px;
      height: 24px;
    }

    summary {
      margin-top: 0;
    }
  }

  @media (max-width: 420px) {
    .header-content {
      gap: 1rem;
    }

    .header-right {
      gap: 1rem;
    }

    .nav-links {
      display: none;
    }

    .nav-links a span {
      display: none;
    }
  }
</style>
